<%= render "shared/header" %>
  <div class="movie__comments">
    <% if user_signed_in? %>
      <%= form_with model: [@movie, @comment],local: true do |f|%>
        <div class="field">
          <%= f.label :comment_title, "題名" %><br />
          <%= f.text_field :comment_title, id:"comment_text" %>
        </div>
        <div class="field">
          <%= f.label :comment_text, "コメント" %><br />
          <%= f.text_field :comment_text, id:"comment_text" %>
        </div>
        <div class="actions">
          <%= f.submit "送信する", class: :form__btn  %>
        </div>
      <% end %> 
    <% end %>
    <ul class="comments_lists">
    <h4>＜コメント一覧＞</h4>
      <% @comments.each do |comment| %>
        <li class="comments_list">
          <strong><%= comment.comment_title %>：</strong>
          <%= comment.comment_text %>
          <strong>：<%= link_to comment.user.nickname, "/users/#{comment.user_id}" %></strong>
        </li>
      <% end %>
    </ul>
  </div>